<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.b00047562.parkinson_mhealth.ResultsAnalysis"
    tools:showIn="@layout/activity_results_analysis"
    android:gravity="left">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:animateLayoutChanges="true"
        android:layout_marginTop="60dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_title">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_span="2"
                android:layout_marginRight="25dp"
                android:gravity="left">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Test Name"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="left|center_horizontal"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Scale"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="-20dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_hand">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hand Tremor"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="result 1"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="35dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_spiral">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Spiral"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="result 2"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="35dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_tap">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tapping "
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="result 3"
                    android:id="@+id/tapscore_tv"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="35dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_ov">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Overall "
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="UPW scale result"
                    android:id="@+id/textView14"
                    android:layout_weight="0.56"
                    android:gravity="right"
                    android:layout_marginRight="25dp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_ad1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginRight="-20dp"
                android:layout_gravity="center"
                android:gravity="left">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Extra Info"
                    android:id="@+id/tv_question_extra"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:layout_weight="0.03"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:lines="1"
                    android:background="@drawable/border" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_ad2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="10dp">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Detailed Advice"
                    android:id="@+id/advice_tv_analysis"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:singleLine="false"
                    android:lines="3"
                    android:background="@drawable/border" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:visibility="gone"
            android:id="@+id/tbrow_ad3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="10dp">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Detailed Advice"
                    android:id="@+id/tv_extra1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:singleLine="false"
                    android:lines="4"
                    android:background="@drawable/border" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="Show Advice"
                    android:id="@+id/btn_showadvice"
                    android:onClick="displayadvicebtn" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tbrow_graphs">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/content_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/content_primary"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp">
                </FrameLayout>

            </LinearLayout>
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Graphs for Comparison"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

</RelativeLayout>
